{
  "site_name": "example_profiles_2000",
  "start_urls": [
    "https://example.org/profiles?year=2000"
  ],
  "allowed_domains": [
    "example.org"
  ],
  "user_agent": "D2ILiteArchiveBot/1.0 (+local archival use)",
  "output_root": "data/public_archive/example_profiles_2000",
  "selectors": {
    "list_item": ".list-item",
    "name": [
      ".name::text",
      "a::text"
    ],
    "detail_link": "a::attr(href)",
    "next_page": "a.next::attr(href)",
    "detail_name": [
      "h1::text",
      ".profile-name::text"
    ],
    "detail_image": ".profile-photo img::attr(src)",
    "detail_gender": ".gender::text",
    "detail_summary": [
      ".profile-content p::text",
      ".profile-content li::text"
    ],
    "detail_fields": {
      "department": ".department::text",
      "title": ".title::text",
      "specialty": ".specialty::text"
    }
  },
  "rules": {
    "obey_robots_txt": true,
    "snapshot_html": true,
    "extract_images": true,
    "write_metadata": true,
    "named_images_dir": "downloads/named",
    "required_fields": [
      "name",
      "detail_url",
      "image_url"
    ],
    "default_gender": "unknown",
    "gender_map": {
      "男": "male",
      "女": "female"
    }
  },
  "crawl": {
    "concurrent_requests": 1,
    "download_delay": 8,
    "autothrottle_start_delay": 8,
    "autothrottle_max_delay": 20,
    "retry_times": 3,
    "timeout_seconds": 30,
    "blocked_statuses": [
      403,
      429
    ],
    "blocked_backoff_hours": 6,
    "image_interval_min_seconds": 8,
    "image_interval_max_seconds": 20
  }
}
